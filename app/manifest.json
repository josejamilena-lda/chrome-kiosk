{
    "name": "__MSG_appName__",
    "description": "__MSG_appDescription__",
    "version": "44",
    "manifest_version": 2,
    "default_locale": "en",
    "permissions": [
        {
            "socket": [
                "tcp-listen:*:*",
                "tcp-connect:*:*"
            ]
        },
        "alwaysOnTopWindows",
        "power",
        "fullscreen",
        "storage",
        "system.display",
        "system.storage",
        "usb",
        "videoCapture",
        "webview",
        "<all_urls>"
    ],
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "app": {
        "background": {
            "scripts": [
                "scripts/main.js",
                "scripts/chromereload.js"
            ]
        }
    }
}